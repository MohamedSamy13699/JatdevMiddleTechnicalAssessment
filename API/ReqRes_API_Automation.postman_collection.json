					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Response contains correct name and job\", function () {\r",
							"    const res = pm.response.json();\r",
							"    pm.expect(res.name).to.eql(\"John Doe\");\r",
							"    pm.expect(res.job).to.eql(\"QA Engineer\");\r",
							"});\r",
							"\r",
							"pm.test(\"Response contains generated ID\", function () {\r",
							"    const res = pm.response.json();\r",
							"    pm.expect(res.id).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"// Save ID for chaining\r",
							"let userId = pm.response.json().id;\r",
							"pm.environment.set(\"userId\", userId);\r",
